; ===============================
; Hedge â€” Supervisor configuration (example)
; Paths tailored for /root/hedge-fund
; ===============================

[program:hedge-executor]
directory=/root/hedge-fund
command=/root/hedge-fund/venv/bin/python -m execution.executor_live
autostart=true
autorestart=true
startsecs=5
stopasgroup=true
killasgroup=true
stopsignal=INT
stdout_logfile=/var/log/hedge/executor.out.log
stderr_logfile=/var/log/hedge/executor.err.log
environment=PYTHONPATH="/root/hedge-fund",PYTHONUNBUFFERED="1",BINANCE_TESTNET="1",TELEGRAM_ENABLED="0",EXECUTOR_LABEL="hetzner-fsn1",FIREBASE_CREDS_PATH="/root/hedge-fund/config/firebase_creds.json"

[program:hedge-sync]
directory=/root/hedge-fund
command=/root/hedge-fund/venv/bin/python -m execution.sync_state
autostart=true
autorestart=true
startsecs=5
stopasgroup=true
killasgroup=true
stopsignal=INT
stdout_logfile=/var/log/hedge/sync.out.log
stderr_logfile=/var/log/hedge/sync.err.log
environment=PYTHONPATH="/root/hedge-fund",PYTHONUNBUFFERED="1",TELEGRAM_ENABLED="0",FIREBASE_CREDS_PATH="/root/hedge-fund/config/firebase_creds.json"

[program:hedge-dashboard]
directory=/root/hedge-fund
command=/root/hedge-fund/venv/bin/streamlit run dashboard/main.py --server.port=8501 --server.address=0.0.0.0
autostart=false
autorestart=true
startsecs=8
stopasgroup=true
killasgroup=true
stopsignal=INT
stdout_logfile=/var/log/hedge/dashboard.out.log
stderr_logfile=/var/log/hedge/dashboard.err.log
environment=PYTHONPATH="/root/hedge-fund",PYTHONUNBUFFERED="1"
